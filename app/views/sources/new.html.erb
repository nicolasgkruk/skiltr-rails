<% provide(:title, 'Create new source') %>
<h1>Add source</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @source, local: true) do |f| %>
      <% if @source.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-danger">
            The form contains <%= pluralize(@source.errors.count, "error") %>.
          </div>
          <ul>
            <% @source.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: 'E.g. The communist manifesto' %>

      <%= f.label :author, 'Author/s' %>
      <%= f.text_field :author, class: 'form-control', placeholder: 'E.g. Karl Marx, Friedrich Engels' %>

      <%= f.label :url, 'External reference' %>
      <%= f.text_field :url, class: 'form-control', placeholder: 'E.g. the wikipedia link for the book, or the original url for the source for a blog post, etc.' %>

      <%= f.submit "Create", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>