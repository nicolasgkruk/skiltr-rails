 <li class="d-flex justify-content-between align-items-center">
  <div>
    <h4><%= link_to source.title + " by " + source.author, source_path(source.id), title: "View source's signs" %></h4>
    <%= link_to "External link reference", source.url, :target => "_blank" %>
  </div>
  <div>
    <%= link_to "edit", edit_source_path(source.id) %> -
    <%= link_to "delete", source, method: :delete, data: { confirm: "Please take into account that by deleting this source you will also be deleting as well all its added excerpts. Do you confirm?" } %>
  </div>
</li>