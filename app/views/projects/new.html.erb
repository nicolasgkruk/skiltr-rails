<% provide(:title, 'Create new project') %>
<h1>Create project</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @project, local: true) do |f| %>
      <% if @project.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-danger">
            The form contains <%= pluralize(@project.errors.count, "error") %>.
          </div>
          <ul>
            <% @project.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "E.g: Communism and sci-fi" %>

      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control', placeholder: "E.g: Article to show the influence of marxist ideas on sci-fi literature" %>

      <%= f.submit "Create", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>