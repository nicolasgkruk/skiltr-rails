 <li class="d-flex justify-content-between align-items-center">
  <div>
    <h4><%= link_to tag.title, tag_path(tag.id), title: "View tag's signs" %></h4>
    <span><%= tag.description%></span>
  </div>
  <div>
    <%= link_to "edit", edit_tag_path(tag.id) %> -
    <%= link_to "delete", tag, method: :delete, data: { confirm: "Please take into account that by deleting this tag you will also be deleting all its previously applied associations with excerpts. Do you confirm?" } %>
  </div>
</li>